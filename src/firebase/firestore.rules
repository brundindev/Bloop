rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Regla que permite acceso si el usuario está autenticado
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // Reglas específicas para la colección 'usuarios'
    match /usuarios/{userId} {
      // Permitir lectura a cualquier usuario autenticado
      allow read: if request.auth != null;
      
      // Permitir escritura solo al propio usuario o a administradores
      allow write: if request.auth != null && (
        request.auth.uid == userId || 
        exists(/databases/$(database)/documents/usuarios/$(request.auth.uid)) && 
        get(/databases/$(database)/documents/usuarios/$(request.auth.uid)).data.rol == 'administrador'
      );
    }
    
    // Reglas para publicaciones
    match /publicaciones/{postId} {
      // Cualquier usuario autenticado puede leer publicaciones
      allow read: if request.auth != null;
      
      // El autor puede crear, actualizar o eliminar sus propias publicaciones
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && 
        request.auth.uid == resource.data.autorId;
    }
    
    // Reglas para comentarios
    match /comentarios/{commentId} {
      // Cualquier usuario autenticado puede leer comentarios
      allow read: if request.auth != null;
      
      // El autor puede crear, actualizar o eliminar sus propios comentarios
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && 
        request.auth.uid == resource.data.autorId;
    }
    
    // Reglas para notificaciones
    match /notificaciones/{notifId} {
      // Solo el receptor puede leer sus notificaciones
      allow read: if request.auth != null && 
        request.auth.uid == resource.data.receptorId;
      
      // Cualquier usuario puede crear notificaciones (para otros)
      allow create: if request.auth != null;
      
      // Solo el receptor puede marcar como leída
      allow update: if request.auth != null && 
        request.auth.uid == resource.data.receptorId;
    }
  }
}
