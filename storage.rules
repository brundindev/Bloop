rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Regla predeterminada: sólo usuarios autenticados pueden acceder
    match /{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Imágenes de perfil: sólo el propio usuario puede subir su foto de perfil
    match /usuarios/{userId}/perfil/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Imágenes de publicaciones: cualquier usuario puede leer, sólo el autor puede subir
    match /publicaciones/{userId}/{publicacionId}/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
} 